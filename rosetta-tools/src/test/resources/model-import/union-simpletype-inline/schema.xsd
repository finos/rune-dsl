<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:lei="http://www.gleif.org/data/schema/leidata/2016" targetNamespace="http://www.gleif.org/data/schema/leidata/2016" elementFormDefault="qualified">
    <xsd:simpleType name="FooBar">
        <xsd:union>
            <xsd:simpleType>
                <xsd:restriction base="xsd:string">
                    <xsd:minLength value="2"/>
                    <xsd:maxLength value="2"/>
                    <xsd:pattern value="([A-Z]{2})"/>
                </xsd:restriction>
            </xsd:simpleType>

            <xsd:simpleType>
                <xsd:restriction base="xsd:string">
                    <xsd:minLength value="4"/>
                    <xsd:maxLength value="6"/>
                    <xsd:pattern value="([A-Z]{2}-[A-Z0-9]{1,3})"/>
                </xsd:restriction>
            </xsd:simpleType>
        </xsd:union>
    </xsd:simpleType>


</xsd:schema>